# Makefile for python interface for package goodbc_python_go.
# File is generated by gopy. Do not edit.
# gopy build -output=goodbc_python/py2 -symbols=true -vm=/Users/edwardbeech/.venv/goodbc-python/bin/python goodbc_python/goodbc_python_go

GOCMD=go
GOBUILD=$(GOCMD) build
GOIMPORTS=goimports
PYTHON=/Users/edwardbeech/.venv/goodbc-python/bin/python
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = -I/Users/edwardbeech/.venv/goodbc-python/include/python2.7
LDFLAGS = -L/System/Library/Frameworks/Python.framework/Versions/2.7/lib -lpython2.7 -ldl  -framework CoreFoundation 

all: gen build

gen:
	gopy gen -symbols=true -vm=/Users/edwardbeech/.venv/goodbc-python/bin/python goodbc_python/goodbc_python_go

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm goodbc_python_go.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w goodbc_python_go.go
	# generate goodbc_python_go_go$(LIBEXT) from goodbc_python_go.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o goodbc_python_go_go$(LIBEXT) goodbc_python_go.go
	# use pybindgen to build the goodbc_python_go.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# build the _goodbc_python_go$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated goodbc_python_go.py python wrapper imports this c-code package
	$(GCC) goodbc_python_go.c -dynamiclib goodbc_python_go_go$(LIBEXT) -o _goodbc_python_go$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


