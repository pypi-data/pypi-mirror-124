if [ $# -ne 4 ]; then
    echo "usage: $0 <script_file_name> <gpu_id> <env> <save_dir>"
    exit 1
fi
RESULTDIR="$4/$3_results"
for seed in 1 10 100
do
    python $1 --gpu $2 --seed $seed --env $3 --save-dir $4
done