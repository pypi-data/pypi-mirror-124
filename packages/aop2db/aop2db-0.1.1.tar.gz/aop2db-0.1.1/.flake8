#########################
# Flake8 Configuration  #
#########################

[flake8]
ignore =
    A003 # class attribute "id" is shadowing a python builtin
    I202 # Additional newline in a group of imports.

exclude =
    .tox,
    .git,
    __pycache__,
    docs/source/conf.py,
    build,
    dist,
    tests/fixtures/*,
    *.pyc,
    *.egg-info,
    .cache,
    .eggs
max-complexity = 20
max-line-length = 120
import-order-style = pycharm
